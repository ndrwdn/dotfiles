    set diffexpr=WinDiff()
    function! WinDiff()
        let diffp = "\"" . $VIMRUNTIME . "\\diff.exe\""
        let opt = " -a --binary "
        if &diffopt =~ "icase"
            let opt = opt . "-i "
        endif
        if &diffopt =~ "iwhite"
            let opt = opt . "-b "
        endif
        silent execute "!" . diffp . opt . v:fname_in . " " . v:fname_new . " > " . v:fname_out
    endfunction

    au BufRead */FILES/* set ro
    au BufRead */DHTML/* set ro

    set grepprg=grep\ -n
    set guifont=Inconsolata:h12:cANSI
    set guioptions-=a
    set clipboard-=unnamed
    syntax enable
endif



